<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<uwsgi>
  <module>readable.wsgi</module>
  <optimize>2</optimize>

  <processes>4</processes>
  <threads>8</threads>
  <offload-threads>2</offload-threads>

  <http-socket>0.0.0.0:8000</http-socket>
  <http-socket>0.0.0.0:8001</http-socket>
  <http-socket>0.0.0.0:8002</http-socket>
  <http-socket>0.0.0.0:8003</http-socket>

  <map-socket>0:1</map-socket><!-- 0.0.0.0:8000 to uWSGI worker 1 -->
  <map-socket>1:2</map-socket><!-- 0.0.0.0:8001 to uWSGI worker 2 -->
  <map-socket>2:3</map-socket><!-- 0.0.0.0:8002 to uWSGI worker 3 -->
  <map-socket>3:4</map-socket><!-- 0.0.0.0:8003 to uWSGI worker 4 -->

  <stats>/var/run/uwsgi_healthcheck.socket</stats>
  <stats-minified/>
  <memory-report/>

  <static-map>/media/=/application/readable/resources/mediafiles/</static-map>
  <static-map>/static/=/application/readable/resources/staticfiles/</static-map>
  <static-map>/favicon.ico=/application/readable/resources/staticfiles/favicon.ico</static-map>

  <post-buffering>8192</post-buffering>
  <harakiri>300</harakiri>
  <harakiri-verbose/>

  <listen>65535</listen>
  <so-keepalive/>
  <tcp-nodelay/>
  <limit-post>52428800</limit-post>

  <master/>
  <strict/>
  <vacuum/>
  <pcre-jit/>
  <auto-procname/>
  <enable-threads/>
  <disable-logging/>
  <single-interpreter/>
</uwsgi>
