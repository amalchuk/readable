{
  "openapi": "3.0.3",
  "info": {
    "title": "OpenAPI Specification",
    "version": "0.3.3",
    "contact": {
      "name": "Andrew Malchuk",
      "email": "andrew.malchuk@yandex.ru"
    },
    "license": {
      "name": "MIT License",
      "url": "https://choosealicense.com/licenses/mit"
    }
  },
  "servers": [
    {
      "url": "https://readable.pw/api",
      "description": "Public REST API"
    }
  ],
  "paths": {
    "/users/": {
      "post": {
        "description": "Create a user instance",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/userCreateObject"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/userCreateObject"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/validationError"
                }
              }
            }
          }
        }
      }
    },
    "/users/profile/": {
      "get": {
        "description": "Retrieve a user instance",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/userRetrieveUpdateObject"
                }
              }
            }
          }
        }
      },
      "put": {
        "description": "Update a user instance",
        "parameters": [
          {
            "description": "Update a user instance with partial data",
            "name": "partial",
            "in": "query",
            "schema": {
              "type": "boolean",
              "default": false
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/userRetrieveUpdateObject"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/userRetrieveUpdateObject"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/validationError"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/unauthorizedError"
                }
              }
            }
          }
        },
        "security": [
          {
            "basicAuthentication": []
          }
        ]
      },
      "patch": {
        "description": "Partial update a user instance",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/userRetrieveUpdateObject"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/userRetrieveUpdateObject"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/validationError"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/unauthorizedError"
                }
              }
            }
          }
        },
        "security": [
          {
            "basicAuthentication": []
          }
        ]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "basicAuthentication": {
        "type": "http",
        "scheme": "basic"
      }
    },
    "schemas": {
      "userCreateObject": {
        "type": "object",
        "required": [
          "username",
          "password"
        ],
        "properties": {
          "username": {
            "type": "string",
            "minLength": 6,
            "maxLength": 50,
            "pattern": "^[a-zA-Z0-9]+$"
          },
          "password": {
            "type": "string",
            "writeOnly": true
          }
        },
        "additionalProperties": false
      },
      "userRetrieveUpdateObject": {
        "type": "object",
        "properties": {
          "first_name": {
            "type": "string",
            "maxLength": 150
          },
          "last_name": {
            "type": "string",
            "maxLength": 150
          },
          "email": {
            "type": "string",
            "format": "email"
          }
        },
        "additionalProperties": false
      },
      "validationError": {
        "type": "object",
        "minProperties": 1,
        "additionalProperties": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        }
      },
      "unauthorizedError": {
        "type": "object",
        "required": [
          "detail"
        ],
        "properties": {
          "detail": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  }
}
